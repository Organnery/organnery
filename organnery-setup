#!/usr/bin/env bash
echo "organnery-setup"

# set cpu governor to performance
cpufreq-set -r -g performance

# simple automount script
MEDIA=sda1
USERNAME=user

# quit if no usb drive detected
if ! lsblk | grep $MEDIA; then
	echo "usb not connected! quitting"
	exit 0
fi

# mount the usb drive on top of default stops directory
mount /dev/$MEDIA /home/$USERNAME/stops/ -o rw,sync,noatime,noiversion,norelatime,umask=0000
echo "mounted!"
